@page
@model ApplicationCars.Pages.Account.LoginModel
@{
}

<section class="vh-10">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password</p>

                            <div class="form-outline form-white mb-4">
                                <input type="text" asp-for="Credential.UserName" id="typeUsername" class="form-control form-control-lg" />
                                <label asp-for="Credential.UserName"class="form-label" for="typeUsername"></label>
                                <span class="text-danger" asp-validation-for="Credential.UserName"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="password" asp-for="Credential.Password" id="typePassword" class="form-control form-control-lg" />
                                <label asp-for="Credential.Password" for="typePassword"></label>
                                <span class="text-danger" asp-validation-for="Credential.Password"></span>
                            </div>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

                        </div>

                        <div>
                            <p class="mb-0">Don't have an account? <a href="#!" class="text-white-50 fw-bold">Sign Up</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>